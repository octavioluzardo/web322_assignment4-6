<div>
    <div class="whitegrid">
        <section class="roomGrid">
            {{#each Rooms}}
            <div>
                <a href=""><img src="uploadedIMG/{{this.roomPicture}}" style="width:200px;height:150px"></a><br>
                <div class="roomInfo">
                    {{this.roomName}} <br>
                    {{this.roomDescription}}<br>
                    {{this.roomLocation}}<br>
                    ${{this.roomPrice}} CAD per night<br>
                    {{#if ../user.admin}}
                    <a href="/Rooms/editROOMS/{{this._id}}"> Edit Room </a></a>
                    <a href="/user/booking/{{this._id}}"> Book this Room </a>
                    {{else}}
                        {{#if ../user}}
                        <a href="/user/booking/{{this._id}}"> Book this Room </a>
                        {{/if}}
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </section>
    </div>
</div>
