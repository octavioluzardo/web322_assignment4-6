<div class="registrationPage">

    <div class="card cardForm" id="refFormNudge" style="width: 30rem;">
        <div class="card-body">
            <div class="formReg text-center">
                <form method="POST" action="/rooms/adminRooms" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control" name="roomName"  placeholder="Enter room title">
                    </div>
                    <form>
                    <div class="form-group">
                        <input type="number" class="form-control" name="roomPrice" placeholder="Price">
                    </div>
                        <div class="form-group">
                            <input type="text" name="roomDescription" class="form-control" placeholder="Room description">
                        </div>
        
                    <div class="form-group" >
                        <select id="location" name="roomLocation">
                            <option value="null">Select a location</option>
                            <option value="toronto">Toronto</option>
                            <option value="ottawa">Ottawa</option>
                            <option value="vancouver">Vancouver</option>
                            <option value="montreal">Montreal</option>
                            <option value="edmonton">Edmonton</option>
                        </select>
                    </div>
                    <input type="file" name="roomPicture"> 
                    
                    {{#each message}}
                        <div class="errors">{{this}}</div>
                    {{/each}}
                        <div>
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </div>
                    </form>
        </div>
    </div>    