<div class="loginPage">
    <div class="whitebox">
        <div class="formReg text-center">
            <form method="POST" action="/user/loginPage">
                <h4 class="loginHeader"> Please log in to book your next getaway</h4>
                {{#each message}}
                    <div class="errors">{{this}}</div>
                {{/each}}
                <div class="form-group">
                    <input type="email" class="form-control" name="email"  placeholder="Enter Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Enter password">
                </div>
                <div>
                    <button type="submit" id="loginbtn" class="btn btn-danger">Login</button>
                </div>
                <div> <a href="/user/registration">Make a new account</a></div>
            </form>   
        </div>
    </div>
</div>


